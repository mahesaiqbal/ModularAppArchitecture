<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Click to Download News Module" />

    <Button
        android:id="@+id/btn_open_news_module"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_click"
        android:layout_centerInParent="true"
        android:text="Open News Module"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_delete_news_module"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_open_news_module"
        android:layout_centerInParent="true"
        android:text="Delete News Module"
        android:visibility="gone" />
</RelativeLayout>